{
  "name": "typescript-plugin-css-modules",
  "version": "3.4.0",
  "main": "dist/index.js",
  "author": "Brody McKee <mrmckeb@hotmail.com>",
  "license": "MIT",
  "description": "CSS modules support for TypeScript",
  "homepage": "https://github.com/mrmckeb/typescript-plugin-css-modules",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrmckeb/typescript-plugin-css-modules"
  },
  "keywords": [
    "css",
    "scss",
    "sass",
    "less",
    "stylus",
    "modules",
    "plugin",
    "postcss",
    "typescript"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rm -rf ./dist && tsc --project tsconfig.build.json",
    "lint": "eslint --max-warnings 0 . && yarn prettier -c .",
    "prepublishOnly": "yarn build",
    "test": "jest",
    "prepare": "husky install"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.{ts}"
    ],
    "preset": "ts-jest",
    "setupFiles": [
      "<rootDir>/src/setup-tests.ts"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/fixtures/"
    ]
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "./**/*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "icss-utils": "^5.1.0",
    "less": "^4.1.3",
    "lodash.camelcase": "^4.3.0",
    "postcss": "^8.4.18",
    "postcss-filter-plugins": "^3.0.1",
    "postcss-icss-keyframes": "^0.2.1",
    "postcss-icss-selectors": "^2.0.3",
    "postcss-load-config": "^3.1.4",
    "reserved-words": "^0.1.2",
    "sass": "^1.56.0",
    "source-map-js": "^1.0.2",
    "stylus": "^0.59.0",
    "tsconfig-paths": "^4.1.0"
  },
  "devDependencies": {
    "@types/icss-utils": "^5.1.0",
    "@types/jest": "^29.2.2",
    "@types/less": "^3.0.3",
    "@types/lodash.camelcase": "^4.3.7",
    "@types/node": "^18.11.9",
    "@types/reserved-words": "^0.1.0",
    "@types/sass": "^1.43.1",
    "@types/stylus": "^0.48.38",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "bootstrap": "^5.2.2",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "lint-staged": "^13.0.3",
    "postcss-import-sync2": "^1.2.0",
    "postcss-nested": "^4.2.3",
    "prettier": "^2.7.1",
    "sass-svg": "^1.2.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "typescript": ">=3.9.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@popperjs/core",
        "node-sass"
      ]
    }
  }
}
